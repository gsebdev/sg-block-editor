{
  "compilerOptions": {
    "target": "ES6",  // or "ES2020" depending on your browser support requirements
    "module": "ESNext", // Use ES modules
    "strict": false, // Enable all strict type-checking options
    "moduleResolution": "node",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true, // Skips type-checking of declaration files for faster build times
    "sourceMap": false, // Disable source maps for production builds
    "noEmitOnError": true, // Prevent emitting output if there are type errors
    "declaration": false, // Don't generate declaration files in production
    "removeComments": true, // Remove comments in the final build
    "outDir": "./dist", // Output directory for compiled code
    "jsx": "react-jsx", // If you're using React, you can enable JSX
    "lib": ["dom", "esnext"]
  },
  "include": ["src/**/*", "demo/**/*"],
  "exclude": ["node_modules"]
}