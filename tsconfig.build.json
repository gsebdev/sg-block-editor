{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "outDir": "./dist",
      "declaration": true,
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": false,
      "noEmit": false,
      "resolveJsonModule": true,
      "removeComments": true,
      "strict": true,
      "allowJs": true
    },
    "include": ["src/**/*", "lib/rich-text-module/component"],
    "exclude": ["node_modules", "dist"]
  }